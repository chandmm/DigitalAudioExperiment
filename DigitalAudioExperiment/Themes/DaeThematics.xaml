    <Viewbox Stretch="Uniform" x:Key="MoveUpViewBoxIcon">
        <Label Content="^"
            FontWeight="Bold"
            FontSize="48"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center"/>
    </Viewbox>

    <Viewbox Stretch="Fill" x:Key="MoveDownViewBoxIcon" Margin="2">
        <Label Content="^"
            FontWeight="Bold"
            FontSize="48"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center"/>
    </Viewbox>
    <Viewbox Stretch="Fill" x:Key="FilterIconViewbox" Margin="5">
        <Path Data="M15 2v1.67l-5 4.759V14H6V8.429l-5-4.76V2h14z" Fill="{StaticResource ComponentBackgroundColour}"/>
    </Viewbox>

    <!--Convetors-->
    <convertors:BoolToVisibilityConvertor x:Key="BoolToVisibilityConvertor"/>

</ResourceDictionary>    