<Application x:Class="DigitalAudioExperiment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DigitalAudioExperiment" 
             xmlns:viewmodel="clr-namespace:DigitalAudioExperiment.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DaeThematics.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <viewmodel:ReceiverViewModel x:Key="ReceiverViewModelKey"/>
            <BitmapImage x:Key="ReceiverFacePlateImageSource" UriSource="placeholder.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
